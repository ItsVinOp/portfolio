---
type WorkExperienceType = { company: string, duration: { from: string, till: string, totalDuration: string }, role: string }
const workExperiences: WorkExperienceType[] = [
    { company: "Giftlaya",      duration: { from: "May 2024", till: "Present", totalDuration: "7mos" }, role: "Next.js Developer (MERN)" },
    { company: "MakeIndias",    duration: { from: "Oct 2023", till: "Apr 2024", totalDuration: "6mos" }, role: "Full-Stack Developer" },
    { company: "Independent",   duration: { from: "Jul 2024", till: "Present", totalDuration: "2mos" }, role: "Next.js Instructor" },
    { company: "BrightChamps",  duration: { from: "Jul 2023", till: "Mar 2024", totalDuration: "9mos" }, role: "Node & Python Instructor" },
]
---

<div class="grid grid-cols-1 md:grid-rows-2 md:grid-cols-2 gap-x-14 gap-y-12 md:grid-flow-col items-start justify-start">
    { workExperiences.map(({ company, duration: { from, till }, role }) => (
        <div>
            <span class="text-2xl">{role}</span>
            <h3 class="text-2xl">{company}</h3>
            <span class="text-white/30 text-lg">{from} - {till}</span>
        </div>
    ))}
</div>