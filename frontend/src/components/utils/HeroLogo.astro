<div>
    <div id="banner_logo_T"></div>
    <div id="banner_logo_R"></div>
    <div id="banner_logo_B"></div>
    <div id="banner_logo_L"></div>
</div>


<style lang="scss">
    div {
        aspect-ratio: 1/1;
        width: 200px;
        display: grid;

        z-index: 200;
        user-select: none;

        & > * {
            grid-row-start: 1;
            grid-column-start: 1;
            width: 100%;
            height: 100%;
            background: linear-gradient(67.5deg, #ea215d, #b03beb, #4d21ea);
            transition: .65s;
            transform: rotate(22.5deg);
        }
        
        @media (max-width: 1100px)  { width: 170px; height: 170px; }
        @media (max-width: 850px)   { width: 140px; height: 140px; }
        @media (max-width: 560px)   { width: 120px; height: 120px; }
        @media (max-width: 425px)   { width: 90px; height: 90px; }

        #banner_logo_T { clip-path: polygon(29.3636% 0, 50.791% 8.7296%, 34.1252% 47.6166%, 21.4274% 19.0466%); }
        #banner_logo_R { clip-path: polygon(64.2824% 14.285%, 100% 29.3636%, 85.71% 65.076%, 50% 50%); }
        #banner_logo_B { clip-path: polygon(39.6804% 61.9068%, 79.361% 79.3662%, 71.425% 100%, 52.3782% 92.064%); }
        #banner_logo_L { clip-path: polygon(0 70.6312%, 12.6976% 39.6804%, 30.9508% 83.329%); }
    }
</style>



<script>


    // hero logo ---------------------------
    type clipsType = { default: string, clipped:string }
    const clipPaths: { top:clipsType, bottom:clipsType, left:clipsType, right:clipsType } = {
        top: {
            default: 'polygon(29.3636% 0, 50.791% 8.7296%, 34.1252% 47.6166%, 21.4274% 19.0466%)',
            clipped: 'polygon(29.3636% 0, 70.6312% 0, 23.8082% 20.6338%, 0 29.3636%)'
        },
        right: {
            default: 'polygon(64.2824% 14.285%, 100% 29.3636%, 85.71% 65.076%, 50% 50%)',
            clipped: 'polygon(70.6312% 0, 100% 29.3636%, 100% 70.6312%, 84.9162% 35.7124%)'
        },
        bottom: {
            default: 'polygon(39.6804% 61.9068%, 79.361% 79.3662%, 71.425% 100%, 52.3782% 92.064%)',
            clipped: 'polygon(52.3782% 90.4768%, 100% 70.6312%, 71.425% 100%, 29.3636% 100%)'
        },
        left: {
            default: 'polygon(0 70.6312%, 12.6976% 39.6804%, 30.9508% 83.329%)',
            clipped: 'polygon(0 70.6312%, 0 29.3636%, 29.3636% 100%)'
        }
    }

    const logoInitialWidth: {mediaMaxWidth:number, logoWidth:string}[] = [
        { mediaMaxWidth: 425,   logoWidth: "90px" },
        { mediaMaxWidth: 560,   logoWidth: "120px" },
        { mediaMaxWidth: 850,   logoWidth: "140px" },
        { mediaMaxWidth: 1100,  logoWidth: "170px" },
        { mediaMaxWidth: 20000, logoWidth: "200px" },
    ]

    function getInitialLogoWidth(): string {
        let finalWidth:string = logoInitialWidth[0].logoWidth
        for(let i=0; i<logoInitialWidth.length; i++) {
            const el = logoInitialWidth[i]
            if(innerWidth >= el.mediaMaxWidth)   finalWidth = el.logoWidth
            else                                break
        }
        return finalWidth
    }

    const widths = { default:"200px", "425px":"160px", }
    function getLogoDimensions() {
        return innerWidth > 425 ? widths.default : widths["425px"]
    }

    const TRANSITION_BOUNDARY = 550
    const DEFAULT_ROTATE = 22.5

    
    // hero banner ------------------------
    
    // const TRANSITION_BOUNDARY = 450
    const heroBannerFullWord = document.getElementById("heroBanner") as HTMLElement
    const heroBannerWordList = document.getElementsByClassName("hero-title")
    const totalWords = heroBannerWordList.length
    const heroLogoInitialWidth = getInitialLogoWidth()
    const heroBannerWidth = (heroBannerFullWord.getBoundingClientRect().width / 2) - Number(heroLogoInitialWidth.substring(0,heroLogoInitialWidth.length-2))/2 - ( innerWidth <= 425 ? 12.5 : innerWidth <= 850 ? 20 : 25)



    addEventListener("scroll", () => {

        // hero banner ------------------------
        if(scrollY < (TRANSITION_BOUNDARY - 200)) {
            const percentage = (scrollY / (TRANSITION_BOUNDARY - 200)) 
            heroBannerFullWord.style.transform = `translateX(${percentage * heroBannerWidth}px)` 
        }


        // hero logo --------------------------
        const fragments = {
            top:    document.getElementById('banner_logo_T') as HTMLElement,
            right:  document.getElementById('banner_logo_R') as HTMLElement,
            bottom: document.getElementById('banner_logo_B') as HTMLElement,
            left:   document.getElementById('banner_logo_L') as HTMLElement,
        }
        
        if( scrollY <= TRANSITION_BOUNDARY ) {

            fragments.top.style.clipPath        = clipPaths.top.default
            fragments.right.style.clipPath      = clipPaths.right.default
            fragments.bottom.style.clipPath     = clipPaths.bottom.default
            fragments.left.style.clipPath       = clipPaths.left.default
            
            fragments.top.style.transform       = `translate(0,0) rotate(${DEFAULT_ROTATE}deg)`
            fragments.right.style.transform     = `translate(0,0) rotate(${DEFAULT_ROTATE}deg)`
            fragments.bottom.style.transform    = `translate(0,0) rotate(${DEFAULT_ROTATE}deg)`
            fragments.left.style.transform      = `translate(0,0) rotate(${DEFAULT_ROTATE}deg)`
            
            fragments.top.style.scale           = `1`
            fragments.right.style.scale         = `1`
            fragments.bottom.style.scale        = `1`
            fragments.left.style.scale          = `1`

            // const initialWidth = getInitialLogoWidth()
            // fragments.top.style.width           = initialWidth
            // fragments.right.style.width         = initialWidth
            // fragments.bottom.style.width        = initialWidth
            // fragments.left.style.width          = initialWidth
            
        } else {

            let currScale = 1
            
            if(scrollY >= TRANSITION_BOUNDARY && scrollY < TRANSITION_BOUNDARY + 85 )
                currScale = 2.5
            else
                currScale = 1 + (scrollY * 0.0055)
                
            // console.log(scrollY)        // 3400 .......
            
            let moveDistance = Math.min(Math.max(scrollY-TRANSITION_BOUNDARY, scrollY) / 40, 88)
            let spinDegree = Math.min(Math.max(scrollY-TRANSITION_BOUNDARY, scrollY)/10, 360) + DEFAULT_ROTATE

            console.log(moveDistance)

            fragments.top.style.clipPath       = clipPaths.top.clipped
            fragments.right.style.clipPath     = clipPaths.right.clipped
            fragments.bottom.style.clipPath    = clipPaths.bottom.clipped
            fragments.left.style.clipPath      = clipPaths.left.clipped
            

            fragments.top.style.transform       = `translate(${moveDistance}px, -${moveDistance}px) rotate(${spinDegree}deg)`
            fragments.right.style.transform     = `translate(${moveDistance}px, ${moveDistance}px) rotate(${spinDegree}deg)`
            fragments.bottom.style.transform    = `translate(-${moveDistance}px, ${moveDistance}px) rotate(${spinDegree}deg)`
            fragments.left.style.transform      = `translate(-${moveDistance}px, -${moveDistance}px) rotate(${spinDegree}deg)`
            

            fragments.top.style.scale       = `${currScale}`
            fragments.right.style.scale     = `${currScale}`
            fragments.bottom.style.scale    = `${currScale}`
            fragments.left.style.scale      = `${currScale}`


            // const logoDimension = getLogoDimensions()
            // fragments.top.style.width       = logoDimension
            // fragments.right.style.width     = logoDimension
            // fragments.bottom.style.width    = logoDimension
            // fragments.left.style.width      = logoDimension
        }

    })
</script>